{% extends 'layout/app.html.twig' %}

{% set page = 'contacts' %}

{% block title %}Управление заявками пользователей{% endblock %}

{% block content %}
    <div
        class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Просмотр заявок
            </h1>
        </section>

        <section
            class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-body">
                    {% include 'partials/flash.html.twig' %}

                    <table id="main-content" class="table table-bordered table-striped offsort">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Имя</th>
                            <th>Email</th>
                            <th style="width: 600px;">Комментарий</th>
                            <th>Дата</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.id }}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.comment }}</td>
                            <td>{{ contact.createDate|date('Y-m-d H:i') }}</td>
                            <td>
                                <form action="{{ path_for('admin.contacts.destroy', {'id': contact.id}) }}" method="POST">
                                    <button onclick="return confirm('Вы уверенны?')" type="submit" class="delete">
                                        <i class="fa fa-remove"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->

        </section>

    </div>
{% endblock %}
