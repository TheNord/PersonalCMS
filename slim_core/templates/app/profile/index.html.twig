{% extends 'layout/app.html.twig' %}

{% set page = 'settings' %}

{% block title %}Редактирование профиля{% endblock %}

{% block content %}
    <div
        class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Редактирование профиля
            </h1>
        </section>

        <section class="content">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование профиля</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="POST" action="{{ path_for('admin.profile.update') }}">
                    <input type="hidden" name="_METHOD" value="PUT"/>
                    <div class="box-body">
                        {% include 'partials/flash.html.twig' %}

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" id="email" name="email" type="email" value="{{ user.email }}" disabled>
                        </div>
                        <div class="form-group">
                            <label for="name">Имя</label>
                            <input class="form-control" id="name" name="name" type="text" value="{{ user.name }}" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Пароль</label>
                            <input class="form-control" id="password" name="password" type="password" value="" required>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <a class="btn btn-default" href="{{ path_for('dashboard') }}">Отменить</a>
                        <button class="btn btn-info pull-right" type="submit">Сохранить</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </section>
    </div>
{% endblock %}
