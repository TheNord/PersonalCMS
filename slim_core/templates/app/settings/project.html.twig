{% extends 'layout/app.html.twig' %}

{% set page = 'settings' %}

{% block title %}Управление настройками - проект
{% endblock %}

{% block content %}
    <div
        class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Управление настройками
            </h1>
        </section>

        <section class="content">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Редактирование настроек проекта</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="POST" action="{{ path_for('admin.settings.project.update') }}">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="emailAdmin">Email администратора (для писем)</label>
                            <input class="form-control" id="emailAdmin" name="mailAdmin" type="email" value="{{ mailAdmin }}" required>
                        </div>
                        <div class="form-group">
                            <label for="projectName">Название проекта (для писем)</label>
                            <input class="form-control" id="projectName" name="projectName" type="text" value="{{ projectName }}" required>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <a class="btn btn-default" href="{{ path_for('admin.settings') }}">Отменить</a>
                        <button class="btn btn-info pull-right" type="submit">Сохранить</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </section>
    </div>
{% endblock %}
