{% extends "layout/auth.html.twig" %}

{% block content %}
    <div class="login-box-body">
        <p class="login-box-msg">Регистрация нового пользователя</p>
        <form action="{{ path_for('register.store') }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Имя" name="name" required>
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email" name="email" required>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Пароль" name="password" required>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Подтверждение пароля" name="password_confirmation" required>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-flat">Зарегистрироваться</button>
        </form>
        <br/>
        <a href="{{ path_for('login.index') }}" class="text-center">Авторизация</a>
    </div>
{% endblock %}
